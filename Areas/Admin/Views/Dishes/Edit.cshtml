@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Areas.Admin.ViewModels.DishViewModel


@{
    ViewData["Title"] = "Chỉnh sửa món";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-sm-right">
                    <a asp-action="index">
                        @* <i class="fas fa-arrow-left"></i> *@
                        Danh sách món
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <dic class="card-body">
                <form asp-action="edit" asp-controller="dishes" asp-area="admin" autocomplete="off">
                    <div class="row mb-12">
                        <div class="col-md-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="DishId" />
                            <div class="form-group required">
                                <label asp-for="DishName" class="control-label"></label>
                                <input asp-for="DishName" disabled class="form-control" />
                                <span asp-validation-for="DishName" class="text-danger"></span>
                            </div>
                            <div class="form-group required">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group required">
                                <label asp-for="DishTypeId" class="control-label"></label>
                                <select asp-for="DishTypeId" class="form-control" asp-items="ViewBag.DishTypeId"></select>
                                <span asp-validation-for="DishTypeId" class="text-danger"></span>
                            </div>
                            <div class="form-group required">
                                <label asp-for="UnitId" class="control-label"></label>
                                <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </dic>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

