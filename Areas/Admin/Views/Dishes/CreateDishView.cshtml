@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Areas.Admin.ViewModels.DishViewModel

@{
	ViewData["Title"] = "CreateDishView";
}

<h1>CreateDishView</h1>

<h4>DishViewModel</h4>
<hr />
<section class="content">

	<div class="row">
		<div class="col-md-4">
			<form method="post" asp-action="create" asp-controller="parties" autocomplete="off">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="DishName" class="control-label"></label>
					<input asp-for="DishName" class="form-control" />
					<span asp-validation-for="DishName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price" class="control-label"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="DishTypeId" class="control-label"></label>
					<select asp-for="DishTypeId" class="form-control select" asp-items="ViewBag.DishTypeId" />
					<span asp-validation-for="DishTypeId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UnitId" class="control-label"></label>
					<select asp-for="UnitId" class="form-control select" asp-items="ViewBag.UnitId" />
					<span asp-validation-for="UnitId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</section>


<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
