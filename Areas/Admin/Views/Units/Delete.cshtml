@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Models.Unit

@{
    ViewData["Title"] = "Xác nhận xoá";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"] / @Model.UnitId</h1>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-12">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UnitName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UnitName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>

                <form asp-action="delete" asp-controller="units" asp-area="admin">
                    <input type="hidden" asp-for="UnitId" />
                    <input type="submit" value="Xoá vĩnh viễn" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-outline-primary">Danh sách đơn vị tính</a>
                </form>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->