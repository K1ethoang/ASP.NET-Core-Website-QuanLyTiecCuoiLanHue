@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Areas.Admin.ViewModels.UnitViewModel

@{
    ViewData["Title"] = "Thêm đơn vị tính";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-sm-right">
                    <a asp-action="index">
                        @* <i class="fas fa-arrow-left"></i> *@
                        Danh sách đơn vị tính
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <dic class="card-body">
                <form asp-action="create" asp-controller="units" asp-area="admin" autocomplete="off">
                    <div class="row mb-12">
                        <div class="col-md-4">
                            <div class="form-group required">
                                <label asp-for="UnitName" class="control-label"></label>
                                <input asp-for="UnitName" class="form-control" />
                                <span asp-validation-for="UnitName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea rows="1" asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Tạo" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </dic>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}