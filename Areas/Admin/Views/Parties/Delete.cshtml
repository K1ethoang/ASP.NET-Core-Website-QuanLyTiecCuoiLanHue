@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Models.Party

@{
    ViewData["Title"] = "Xác nhận xoá";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"] / @Model.PartyId - @Model.PartyName</h1>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>



<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-12">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartyName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartyName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Time)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Time)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.HasMenu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.HasMenu)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer.CusName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartyType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartyType.Name)
                    </dd>
                </dl>

                <form asp-action="delete" asp-controller="parties" asp-area="admin">
                    <input type="hidden" asp-for="PartyId" />
                    <input type="submit" value="Xoá vĩnh viễn" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-outline-primary">Danh sách tiệc</a>
                </form>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->