@model ASP.NET_Core_Website_QuanLyTiecCuoiLanHue.Models.Party

@{
    ViewData["Title"] = "Chi tiết";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"] / @Model.PartyId</h1>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-12">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartyName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartyName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer.CusName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartyType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartyType.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Time)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Time)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @{
                            string status = Model.Status;
                            if (@status.Equals(Party.COMING_SOON))
                            {
                                <span class="badge badge-warning">@status</span>
                            }
                            else if (@status.Equals(Party.GOING_ON))
                            {
                                <span class="badge badge-info">@status</span>
                            }
                            else
                            {
                                <span class="badge badge-success">@status</span>
                            }
                        }
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.HasMenu)
                    </dt>
                    <dd class="col-sm-10">
                        @{
                            if (Model.HasMenu)
                            {
                                <span class="badge badge-success">@Party.HAS_MENU</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">@Party.NO_MENU</span>
                            }
                        }
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                </dl>
                <div>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model.PartyId">Chỉnh sửa</a> |
                    <a asp-action="Index" class="btn btn-outline-primary">Danh sách tiệc</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
